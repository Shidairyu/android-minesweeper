<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StartControlsFragment">

    <Button
        android:id="@+id/newGame_button"
        android:layout_width="@dimen/none"
        android:layout_height="@dimen/fourtyeight"
        android:text="@string/new_game"
        android:layout_marginBottom="@dimen/eight"
        app:layout_constraintBottom_toTopOf="@+id/highscore_button"
        app:layout_constraintEnd_toEndOf="@+id/highscore_button"
        app:layout_constraintStart_toStartOf="@+id/highscore_button" />

    <Button
        android:id="@+id/highscore_button"
        android:layout_width="@dimen/none"
        android:layout_height="@dimen/fourtyeight"
        android:text="@string/highscores"
        android:layout_marginBottom="@dimen/eight"
        app:layout_constraintBottom_toTopOf="@+id/help_button"
        app:layout_constraintEnd_toEndOf="@+id/help_button"
        app:layout_constraintStart_toStartOf="@+id/help_button" />

    <Button
        android:id="@+id/help_button"
        android:layout_width="@dimen/maxButtonWidth"
        android:layout_height="@dimen/fourtyeight"

        android:text="@string/help"
        app:layout_constraintBottom_toTopOf="@+id/toggleDark_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/toggleDark_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/darkmode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>