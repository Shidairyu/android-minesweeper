<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartScreenActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/title_icon_container"
        android:layout_width="@dimen/none"
        android:layout_height="@dimen/none"
        app:layout_constraintBottom_toTopOf="@id/start_controls_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_title_and_icon" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/start_controls_container"
        android:layout_width="@dimen/none"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout="@layout/fragment_start_controls" />

</androidx.constraintlayout.widget.ConstraintLayout>